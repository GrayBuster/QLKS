                        <img style="float:left;width:30px;margin-right:10px;margin-top:10px;" src="~/Content/roomicon.png" />
                        @Html.ActionLink("Phòng", "TrangPhòng", "Phongs", new { area = "" }, new { @class = "navbar-brand", @style = "color:white !important" })
