@model QLKS.TaiKhoan

@{
    ViewBag.Title = "Tạo Tài Khoản";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NV.MaNV,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model=>model.MaNV, (IEnumerable<SelectListItem>)ViewBag.MaNV, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Roles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    List<SelectListItem> roles = new List<SelectListItem>();
                    roles.Add(new SelectListItem
                    {
                        Text = "Kế Toán",
                        Value = "KT"

                    });
                    roles.Add(new SelectListItem
                    {
                        Text = "Tiếp Tân",
                        Value = "TT",
                    });
                    roles.Add(new SelectListItem
                    {
                        Text = "Kế toán trưởng",
                        Value = "AM",
                    });
                    roles.Add(new SelectListItem
                    {
                        Text = "Quản lý nhân sự",
                        Value = "PM",
                    });
                    roles.Add(new SelectListItem
                    {
                        Text = "Quản lý tổng",
                        Value = "Admin",
                    });
                }

                @Html.DropDownListFor(model => model.Roles, roles,new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-primary1" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
