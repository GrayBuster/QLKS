        <a href="www.huflit.edu.vn" class="btn btn-primary1 btn-lg">Donated by HUFLIT</a>
        @Html.ActionLink("Contact us", "Contact", "Home", null, new { @class = "btn btn-primary1 btn-lg" })
        @Html.ActionLink("About us", "About", "Home", null, new { @class = "btn btn-primary1 btn-lg" })
    </p>
</div>

<div class="row container">
    <div class="col-md-6">
        <h2 style="text-align:center"><span class="label label-primary"><span class="glyphicon glyphicon-th-list"></span> Phiếu thuê phòng</span></h2>
        @using (Html.BeginForm("TrangChủ", "Home"))
        {
            @Html.AntiForgeryToken()

            <div style="text-align:center" class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.MaThuePhong, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div style="margin-left:30px;" class="col-md-7">
                        <p>@Html.EditorFor(model => model.MaThuePhong, new { htmlAttributes = new { @class = "form-control",@readonly="readonly" } })</p>
                        @Html.ValidationMessageFor(model => model.MaThuePhong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Phong.TenPhong, htmlAttributes: new { @class = "control-label col-md-4 col-md-4" })
                    <div style="margin-left:30px;" class="maPhong col-md-7">
                        @Html.DropDownListFor(model => model.MaPhong, (IEnumerable<SelectListItem>)ViewBag.MaPhong, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Phong.TenPhong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NgayBatDauThue, "Ngày Thuê Phòng", htmlAttributes: new { @class = "control-label col-md-4",@style="margin-top:10px;" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.NgayBatDauThue, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control col-md-6", style = "margin-top:10px;margin-left:30px;" } })
                        @Html.ValidationMessageFor(model => model.NgayBatDauThue, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2">
                        <input type="submit" value="Đặt" class="btn btn-primary1" />

                        <input class="btn btn-primary1" type="button" name="submit" value="Xem phòng trống" id="btnShow" />
                        <div id="dvShow"></div>
                        <script>
                            $(document).ready(function () {
                                $("#btnShow").click(function () {
                                    $.ajax({
                                        url: '@Url.Action("ShowRoom","Home")',
                                        type: 'post',
                                        success: function (vHtml) {
                                            $("#dvShow").html("");
                                            $("#dvShow").html(vHtml);
                                        }
                                    })
                                })
                            })

                        </script>
                    </div>
                </div>
            </div>
                            }
        <div>


        </div>
    </div>


    <div class="col-md-6">
        <h2 style="text-align:center"><span class="label label-primary"><span class="glyphicon glyphicon-flash"></span> Tin tức</span></h2>
        <hr />
        <ul class="tinTuc">
            <li><p style="text-align:center" class="tintuc1"><a style="color:black;" href="http://kenh14.vn/khach-san-xoay-giup-khach-tro-chiem-nguong-canh-dep-tu-moi-goc-do-20170223212852308.chn">&#9755; Khách sạn xoay đẹp và lôi cuốn đến lạ thường &#9754;</a></p></li>
            <li><p style="text-align:center" class="tintuc1"><a style="color:black;" href="http://kenh14.vn/mexico-ngu-phong-khach-san-co-xac-chet-duoi-gam-giuong-suot-nhieu-ngay-ma-khong-he-hay-biet-20161108231046271.chn">&#9755; Hiện tượng lạ ở khách sạn mexico &#9754;</a></p></li>
            <li><p style="text-align:center" class="tintuc1"><a style="color:black;" href="~/Content/abc.html"> &#9755;Lộ clip hot cảnh Hưng 69 trong hotel&#9754;</a></p></li>
            <li><p style="text-align:center" class="tintuc1"><a style="color:black;" href="http://kenh14.vn/10-ngay-o-khach-san-buon-chan-vi-khach-nay-da-lam-dieu-dac-biet-khien-co-phuc-vu-phong-ngac-nhien-va-xuc-dong-20170425235731787.chn"> &#9755;Vị khách làm một điều ngạc ở khách sạn&#9754;</a></p></li>
            <li><p style="text-align:center" class="tintuc1"><a style="color:black;" href="http://kenh14.vn/bi-mat-dong-troi-ma-khong-mot-nhan-vien-khach-san-nao-dam-noi-voi-ban-20170324120754247.chn"> &#9755;Những bí mật mà nhân viên khách sạn không dám nói&#9754;</a></p></li>
        </ul>
        <div class="xemThem">

            <p style="margin-left:50px; text-align:center;" class="btn btn-primary1"><a href="http://kenh14.vn/khach-san.html" style="color:white;">Xem thêm...</a></p>
        </div>
    </div>
