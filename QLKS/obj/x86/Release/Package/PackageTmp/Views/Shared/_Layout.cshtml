    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body style="margin:0">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p style="color:white">
                    <img style="float:left;width:30px;margin-right:10px;margin-top:10px;" src="~/Content/Homeiocn.png" />
                    @Html.ActionLink("LUXURY HOTEL", "TrangChủ", "Home", new { area = "" }, new { @class = "navbar-brand" ,@style= "color:white !important;font-family:'Lucida Handwriting'" })
                    <img style="float:left;width:30px;margin-right:10px;margin-top:10px;" src="~/Content/personnelicon.png" />
                    @Html.ActionLink("Nhân Viên", "TrangNhânViên", "NVs", null, new { @class = "navbar-brand", @style = "color:white !important" })
                    <img style="float:left;width:30px;margin-right:10px;margin-top:10px;" src="~/Content/roomicon.png" />
                    <a style="color:white" class="navbar-brand" href="@Url.Action("TrangPhòng", "Phongs",null)">Phòng</a>
                    <img style="float:left;width:30px;margin-right:10px;height:35px;margin-top:10px;" src="~/Content/billicon.png" />
                    <a style="color:white" class="navbar-brand" href="@Url.Action("QuảnLýHóaĐơn", "HDs",null)">Hóa Đơn</a>
                    <img style="float:left;width:30px;margin-right:10px;margin-top:10px;" src="~/Content/moneyicon.png" />
                    <a style="color:white" class="navbar-brand" href="@Url.Action("QuảnLýDoanhThu", "DoanhThus",null)">Doanh Thu</a>
                </p>
            </div>
            <div class="navbar-collapse collapse">
                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="imgContainer" style="width:100%">
            <div class="w3-display-container mySlides">
                <img src="~/Content/received_1813296045659961.jpeg" style="width:100%;height:800px;top:790px;right:auto;left:20px" />
