    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer id="footer">
            <div class="fpart-first">
                <div style="width:100%;" class="container">
                    <div  class="row">
                        <div class="col-md-3">
                            <h5>Về chúng tôi</h5>
                            <ul>
                                <li>@Html.ActionLink("Về Luxury Hotel","About","Home",null,new {@class="about1" })</li>
