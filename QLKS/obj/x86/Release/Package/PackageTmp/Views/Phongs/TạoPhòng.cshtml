@model QLKS.Phong

@{
    ViewBag.Title = "Trang Thêm phòng";
}

<h2>Thêm phòng</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MaPhong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaPhong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenPhong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPhong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LoaiPhong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    List<SelectListItem> listPhongs = new List<SelectListItem>();
                    listPhongs.Add(new SelectListItem
                    {
                        Text = "A",
                        Value = "A"
                    });
                    listPhongs.Add(new SelectListItem
                    {
                        Text = "B",
                        Value = "B",
                    });
                    listPhongs.Add(new SelectListItem
                    {
                        Text = "C",
                        Value = "C"
                    });
                }

                @Html.DropDownListFor(model => model.LoaiPhong, listPhongs, "-- Select Status --")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DonGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    List<SelectListItem> donGias = new List<SelectListItem>();
                    donGias.Add(new SelectListItem
                    {
                        Text = (150000).ToString(),
                        Value = (150000).ToString()
                    });
                    donGias.Add(new SelectListItem
                    {
                        Text = (170000).ToString(),
                        Value = (170000).ToString()
                    });
                    donGias.Add(new SelectListItem
                    {
                        Text = (200000).ToString(),
                        Value = (200000).ToString()
                    });
                }

                @Html.DropDownListFor(model => model.DonGia, donGias,"-- Select Status --")
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
             <div class="checkbox">
                 @{
                         List<SelectListItem> tinhTrangs = new List<SelectListItem>();
                         tinhTrangs.Add(new SelectListItem
                         {
                             Text = "Đã đặt",
                             Value = (true).ToString()
                             
                     });
                     tinhTrangs.Add(new SelectListItem
                     {
                         Text = "Còn phòng",
                         Value = (false).ToString(),
                         Selected = true
                     });
                 }

                 @Html.DropDownListFor(model => model.TinhTrang, tinhTrangs)
             </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-primary1" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Về danh sách phòng", "TrangPhòng",null,new { @class= "btn btn-primary1" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
