@model IEnumerable<QLKS.HD>
@using QLKS.Models
@{
    ViewBag.Title = "Quản lý hóa đơn";
}


<div style="margin-top:20px;">
    @Html.ActionLink("Thêm thanh toán", "ThanhToánHóaĐơn",null,new { @class="btn btn-primary1"})
    @Html.ActionLink("Báo cáo doanh thu","QuảnLýDoanhThu","DoanhThus",null,new { @class="btn btn-primary1"})
</div>
<div class="container" style="margin-top:20px;">
    <table style="border:1px solid black;margin-bottom:20px;" class="table">
        <tr style="border:1px solid black;">
            <th style="border:1px solid black;">
                @Html.DisplayNameFor(model => model.MaHD)
            </th>
            <th style="border:1px solid black;">
                @Html.DisplayNameFor(model => model.NgayThanhToan)
            </th>
            <th style="border:1px solid black;">
                @Html.DisplayNameFor(model => model.HoTenKH)
            </th>
            <th style="border:1px solid black;">
                @Html.DisplayNameFor(model => model.SoNgayThue)
            </th>
            <th style="border:1px solid black;">
                @Html.DisplayNameFor(model => model.NV.MaNV)
            </th>
            <th style="border:1px solid black;">
                @Html.DisplayNameFor(model => model.NV.TenNV)
            </th>
            <th style="border:1px solid black;">
                @Html.DisplayNameFor(model => model.ThuePhong.MaThuePhong)
            </th>
            <th style="border:1px solid black;">
                @Html.DisplayNameFor(model => model.ThanhTien)
            </th>
            <th style="border:1px solid black;text-align:center;">Chức năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="border:1px solid black;">
                <td style="border:1px solid black;">
                    @Html.DisplayFor(modelItem => item.MaHD)
                </td>
                <td style="border:1px solid black;">
                    @Html.DisplayFor(modelItem => item.NgayThanhToan)
                </td>
                <td style="border:1px solid black;">
                    @Html.DisplayFor(modelItem => item.HoTenKH)
                </td>
                <td style="border:1px solid black;">
                    @Html.DisplayFor(modelItem => item.SoNgayThue)
                </td>
                <td style="border:1px solid black;">
                    @Html.DisplayFor(modelItem => item.MaNV)
                </td>
                <td style="border:1px solid black;">
                    @Html.DisplayFor(modelItem => item.NV.TenNV)
                </td>
                <td style="border:1px solid black;">
                    @Html.DisplayFor(modelItem => item.MaThuePhong)
                </td>
                <td style="border:1px solid black;">
                    @Html.DisplayFor(modelItem => item.ThanhTien)
                </td>
                <td style="border:1px solid black;">
                            @Html.ActionLink("Sửa", "SửaHóaĐơn", new { id = Encryption.encrypt(item.MaHD) }, new { @class = "btn btn-primary1" })
                            @Html.ActionLink("Xóa", "XóaHóaĐơn", new { id = Encryption.encrypt(item.MaHD) }, new { @class = "btn btn-primary1" })
                </td>
            </tr>
        }

    </table>
</div>
