@model IEnumerable<QLKS.Phong>
<link href="~/Content/boostrap-1.css" rel="stylesheet" />
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
 <div class="container"> 
    <table style="border:1px solid black;text-align:center;margin-left:100px;margin-top:30px;" id="hidden_table" onclick="show_hide_table('hidden_table')" >
        <thead>
            <tr style="border:1px solid black">
                <th style="border:1px solid black">
                    Mã Phòng
                </th>
                <th style="border:1px solid black">
                    Tên Phòng
                </th>
                <th style="border:1px solid black">
                    Tình trạng
                </th>
            </tr>
        </thead>
        @for(int i=0;i<Model.Count();i++)
        {
            <tr style="border:1px solid black">
                <td style="border:1px solid black">
                    @Model.ElementAt(i).MaPhong
                </td>
                <td style="border:1px solid black">
                   @Model.ElementAt(i).TenPhong
                </td>
                <td style="border:1px solid black">
                    @Model.ElementAt(i).ChuyenKieuTinhTrang
                </td>
            </tr>
        }
    </table>
</div>
<br />

<script>
    function show_hide_table(table) {
        $("#" + table).toggle();
    }
</script>